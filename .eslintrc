{
  "extends": ["airbnb-base"],
  "env": {
    "node": true,
    "jest": true
  },
  "rules": {
    "arrow-parens": ["warn", "as-needed"],
    "comma-dangle": ["off"],
    "implicit-arrow-linebreak": ["off"],
    "no-console": ["off"],
    "no-restricted-syntax": ["off"],
    "no-unused-vars": [
      "warn",
      { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
    ],
    "quotes": ["error", "double"]
  }
}
